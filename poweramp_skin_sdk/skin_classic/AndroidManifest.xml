<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.maxmpz.poweramp.skins.classic"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="18"/>

    <application android:icon="@drawable/skin_app_icon" android:label="@string/app_name" android:installLocation="auto">
    	<meta-data android:name="com.maxmpz.PowerampSkins" android:value="true"/>
    
        <activity android:name="com.maxmpz.poweramp.skins.classic.InfoActivity" android:label="@string/app_name" android:configChanges="keyboardHidden" 
        	android:excludeFromRecents="true" android:noHistory="true">
            <intent-filter>
				<category android:name="android.intent.category.INFO"/><!-- Appear as Run button in Play installation dialog. -->
				<category android:name="android.intent.category.LAUNCHER"/><!-- Comment this to avoid icon in launcher -->
				<action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
    </application>
</manifest>